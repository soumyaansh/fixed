<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="350dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    cardview:cardCornerRadius="2dp">


    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/card_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#ffff"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/like_icon_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/like"
        />

    <ImageButton
        android:id="@+id/wishlist_icon_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/wishlist"
        />

    <ImageButton
        android:id="@+id/add_cart_icon_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/add_cart"
        />

    <TextView
        android:id="@+id/card_title_id"
        android:textColor="#2d2d2d"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="235dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Name"/>

    <TextView
        android:id="@+id/card_price_id"
        android:textColor="#2d2d2d"
        android:textSize="13sp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="235dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"/>

</android.support.v7.widget.CardView>